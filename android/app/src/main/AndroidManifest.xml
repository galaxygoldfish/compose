<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.compose.app.android">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/compose_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/compose_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Compose.Light">
        <activity
            android:name=".presentation.ComposeBaseActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Compose.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".notification.service.NotificationIntentService"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".notification.receiver.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".notification.receiver.BootCompleteReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>